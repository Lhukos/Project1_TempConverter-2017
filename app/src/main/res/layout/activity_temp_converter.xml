<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.toney.tempconverter.TempConverterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degrees"
        android:id="@+id/degreesLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fahrenheit"
        android:id="@+id/fahrenheitLabel"
        android:layout_marginTop="35dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/degreesLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/celcius"
        android:id="@+id/celciusLabel"
        android:layout_below="@+id/fahrenheitLabel"
        android:layout_alignStart="@+id/fahrenheitLabel"
        android:layout_marginTop="36dp"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/_0_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/celciusTV"
        android:textSize="18sp"
        android:layout_alignTop="@+id/celciusLabel"
        android:layout_alignStart="@+id/fahrenheitTV" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_00"
        android:ems="10"
        android:id="@+id/fahrenheitTV"
        android:layout_alignTop="@+id/fahrenheitLabel"
        android:layout_toEndOf="@+id/fahrenheitLabel"
        android:layout_marginStart="95dp"
        android:textSize="18sp"
        android:inputType="number" />

</RelativeLayout>
